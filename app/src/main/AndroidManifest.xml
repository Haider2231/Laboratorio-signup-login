<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.unipiloto.convergentes">

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.Convergentes"
        android:label="@string/app_name">

        <!-- LAUNCHER: debe ser exported=true -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Sin intent-filter: usualmente exported=false -->
        <activity
            android:name=".LoginFormActivity"
            android:exported="false" />

        <activity
            android:name=".SignupFormActivity"
            android:exported="false" />

    </application>
</manifest>
